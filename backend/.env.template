# ==============================================================================
# VaxSafe Backend - Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your values
# cp .env.template .env
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL database connection
DB_URL=jdbc:postgresql://localhost:5432/vaxsafe_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password

# ==============================================================================
# JWT & SECURITY
# ==============================================================================
# Generate secret: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_minimum_256_bits
JWT_ACCESS_TOKEN_VALIDITY=86400000
JWT_REFRESH_TOKEN_VALIDITY=604800000

# ==============================================================================
# OAUTH2 - GOOGLE
# ==============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Other OAuth settings have defaults, no need to set unless customizing

# ==============================================================================
# CLOUDINARY - IMAGE STORAGE
# ==============================================================================
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_api_secret

# ==============================================================================
# PAYMENT GATEWAYS
# ==============================================================================

# VNPay Configuration
# Get from: https://sandbox.vnpayment.vn/
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:8080/payments/vnpay/return
VNPAY_TMN_CODE=your_vnpay_terminal_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_VERSION=2.1.0
VNPAY_COMMAND=pay
VNPAY_ORDER_TYPE=other

# PayPal Configuration
# Get from: https://developer.paypal.com/
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_CANCEL_URL=http://localhost:8080/payments/paypal/cancel
PAYPAL_SUCCESS_URL=http://localhost:8080/payments/paypal/success

# ==============================================================================
# BLOCKCHAIN SERVICE
# ==============================================================================
# Optional: Default is http://localhost:4000
# BLOCKCHAIN_SERVICE_URL=http://localhost:4000

# ==============================================================================
# EMAIL SERVICE
# ==============================================================================
# Gmail App Password: https://myaccount.google.com/apppasswords
# Note: Use App Password, NOT your regular Gmail password
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_16_chars
# SMTP settings have defaults for Gmail, no need to set unless using different provider

# ==============================================================================
# APPLICATION URLs
# ==============================================================================
APP_BASE_URL=http://localhost:8080
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend Redirect URLs
FRONTEND_SUCCESS_URL=http://localhost:5173/payment/success
FRONTEND_CANCEL_URL=http://localhost:5173/payment/cancel

# ==============================================================================
# SCHEDULER CONFIGURATION (Optional - has defaults)
# ==============================================================================
# Default: Send reminders 1, 3, 7 days before appointment
# REMINDER_DAYS_BEFORE=1,3,7

# Default: Run daily at 8 AM
# REMINDER_CRON=0 0 8 * * ?

# ==============================================================================
# PRODUCTION EXAMPLE
# ==============================================================================
# For production deployment, use these patterns:
#
# DB_URL=jdbc:postgresql://your-prod-db.com:5432/vaxsafe_prod
# APP_BASE_URL=https://api.vaxsafe.com
# CORS_ALLOWED_ORIGINS=https://vaxsafe.com,https://www.vaxsafe.com
# FRONTEND_SUCCESS_URL=https://vaxsafe.com/payment/success
# PAYPAL_MODE=live
# VNPAY_URL=https://vnpayment.vn/paymentv2/vpcpay.html
# ==============================================================================
